<%# encoding: utf-8 %>
<% @poll = Poll.where(status: "published").last %>
<% if @poll.present? %>
    <div class="widget">
      <div class="title color5">
        <h4>Enquetes</h4>
      </div>
      <div class="wp-polls" id="pollContainer">
        <form class="wp-polls-form" name="poll" id="poll_form" action="#" method="post">
          <p class="tac"><strong><%= @poll.title %></strong></p>

          <div class="wp-polls-ans">
            <ul class="wp-polls-ul">
              <% @poll.poll_options.each do |poll_option| %>
                  <li style="margin-left: 30px">
                    <input type="radio" name="poll_option" value="<%= poll_option.id %>">
                    <%= poll_option.name %>
                  </li>
              <% end %>
            </ul>
            <div class="text-center">
              <button type="button" name="vote" class="btn btn-primary" onclick="pollVote(<%= @poll.id %>)">Vote</button>
              <button type="button" name="results" class="btn btn-warning" onclick="pollResults(<%= @poll.id %>)">Ver
                Resultados
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- widget -->
<% end %>