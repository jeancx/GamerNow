<p class="tac"><strong><%= @poll.title %></strong></p>

<div class="wp-polls-ans">

<ul class="wp-polls-ul">
  <% @poll.poll_options.each do |poll_option| %>
      <li style="margin-left: 30px">
        <%= poll_option.name %> - <%= poll_option.poll_votes.count %> Votos
      </li>
  <% end %>
</ul>

<div class="text-center">
  <button type="button" name="back" value="<%= @poll.id %>" class="btn btn-primary" onclick="pollShow(<%= @poll.id %>)">Vote</button>
  <button type="button" name="results" value="<%= @poll.id %>" class="btn btn-warning" onclick="pollResults(<%= @poll.id %>)">Ver Resultados</button>
</div>
</div>