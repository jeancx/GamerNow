<%= form_for([:admin, @page], html: {class: 'form-horizontal page'}) do |f| %>
    <% if @page.errors.any? %>
        <div id="error_explanation" class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title"><%= pluralize(@page.errors.count, "error") %> prohibited this page from being
              saved:</h2>
          </div>
          <div class="panel-body">
            <ul>
              <% @page.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :title, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :content, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_area :content, class: 'form-control', id: 'editor' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status, "Status", class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= select_tag :status, options_for_select([['Rascunho', 'draft'], ['Publicado', 'published']]), class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit nil, class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
