<div class="panel-heading">
  <h4>Mostrando Imagen</h4>
</div>

<div class="panel-body">
  <p id="notice"><%= notice %></p>

  <dl class="dl-horizontal">
    <dt><strong>Description:</strong></dt>
    <dd><%= @image.description %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>File:</strong></dt>
    <dd><%= @image.file %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Image:</strong></dt>
    <dd><img src="<%= @image.file %>" class="img-responsive"></dd>
  </dl>
</div>

<div class="panel-footer">
  <%= link_to 'Edit', edit_admin_image_path(@image), class: 'btn btn-default' %>
  <%= link_to 'Back', admin_images_path, class: 'btn btn-default' %>
</div>
