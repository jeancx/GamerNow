<%= form_for([:admin, @platform], html: {class: 'form-horizontal platform'}) do |f| %>

    <% if @platform.errors.any? %>
        <div id="error_explanation" class="panel panel-danger">
          <div class="panel-heading">
            <h2 class="panel-title"><%= pluralize(@platform.errors.count, "error") %> prohibited this platform from
              being saved:</h2>
          </div>
          <div class="panel-body">
            <ul>
              <% @platform.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, 'Nome', class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :shortname, 'Nome Curto', class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :shortname, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :background, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.file_field :background, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :logo, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.file_field :logo, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :content, 'Conteudo', class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_area :content, class: 'form-control mceEditor', id: "editor" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.datetime_select :date, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :status, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :status, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit nil, class: 'btn btn-primary' %>
      </div>
    </div>

<% end %>
