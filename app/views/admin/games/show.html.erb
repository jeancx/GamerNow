<div class="panel-heading">
  <h4>Mostrando Game</h4>
</div>

<div class="panel-body">
  <p id="notice"><%= notice %></p>

  <dl class="dl-horizontal">
    <dt><strong>Title:</strong></dt>
    <dd><%= @game.title %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Content:</strong></dt>
    <dd><%= @game.content %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Cover:</strong></dt>
    <dd><%= @game.cover %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Background:</strong></dt>
    <dd><%= @game.background %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Date:</strong></dt>
    <dd><%= @game.date %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Mature:</strong></dt>
    <dd><%= @game.mature %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Status:</strong></dt>
    <dd><%= @game.status %></dd>
  </dl>
</div>

<div class="panel-footer">
  <%= link_to 'Edit', edit_admin_game_path(@game), class: 'btn btn-default' %>
  <%= link_to 'Back', admin_games_path, class: 'btn btn-default' %>
</div>