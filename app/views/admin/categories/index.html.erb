<div class="panel-heading">
  <h4>Listando Categorias<%= link_to '', new_admin_image_path, class: 'btn btn-primary fa fa-plus pull-right' %></h4>
</div>

<div class="panel-body">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Titulo</th>
      <th>Description</th>
      <th>Categoria</th>
      <th width="50"></th>
      <th width="50"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
        <tr>
          <td><%= category.title %></td>
          <td><%= category.description %></td>
          <td><%= category.category_id %></td>
          <td><%= link_to '', [:admin, category], class: 'fa fa-search-plus btn btn-sm btn-default' %></td>
          <% if current_user.has_role? :admin %>
              <td><%= link_to '', edit_admin_category_path(category), class: 'fa fa-pencil-square-o btn btn-sm btn-warning' %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="panel-footer text-center">
  <%= link_to 'Nova Categoria', new_admin_category_path, class: 'btn btn-primary' if current_user.has_role? :admin %>
</div>
