<div class="panel-heading">
    <h4>Mostrando Option</h4>
</div>

<div class="panel-body">
  <p id="notice"><%= notice %></p>

  <dl class="dl-horizontal">
    <dt><strong>Type:</strong></dt>
    <dd><%= @option.type %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Name:</strong></dt>
    <dd><%= @option.name %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Value:</strong></dt>
    <dd><%= @option.value %></dd>
  </dl>
</div>

<div class="panel-footer">
  <%= link_to 'Edit', edit_admin_option_path(@option), class: 'btn btn-default' %>
  <%= link_to 'Back', admin_options_path, class: 'btn btn-default' %>
</div>