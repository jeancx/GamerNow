<%= form_for([:admin, @option], html: { class: 'form-horizontal option' }) do |f| %>

  <% if @option.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>
      </div>
      <div class="panel-body">
        <ul>
        <% @option.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :type, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :type, ['TEXTO', 'HTML', 'CODE'], {label: "Type"},class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :value, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :value, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
