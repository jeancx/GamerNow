<div class="panel-heading">
  <h4>Mostrando Destaque</h4>
</div>

<div class="panel-body">
  <p id="notice"><%= notice %></p>

  <dl class="dl-horizontal">
    <dt><strong>Image a:</strong></dt>
    <dd><%= image_tag @feature.image_a %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Image b:</strong></dt>
    <dd><%= image_tag @feature.image_b %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Post:</strong></dt>
    <dd><%= @feature.post.title %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Published:</strong></dt>
    <dd><%= @feature.published %></dd>
  </dl>
</div>

<div class="panel-footer">
  <%= link_to 'Edit', edit_admin_feature_path(@feature), class: 'btn btn-default' %>
  <%= link_to 'Back', admin_features_path, class: 'btn btn-default' %>
</div>