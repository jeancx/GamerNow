<div class="panel-heading">
  <h4>Listando Canais<%= link_to '', new_admin_channel_path, class: 'btn btn-primary btn-lg fa-plus pull-right' %></h4>
</div>

<div class="panel-body">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Logo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @channels.each do |channel| %>
        <tr>
          <td><%= channel.title %></td>
          <td><%= channel.content %></td>
          <td><%= channel.logo %></td>
          <td><%= link_to '', [:admin, channel], class: 'fa fa-search-plus btn btn-sm btn-default' %></td>
          <td><%= link_to '', edit_admin_channel_path(channel), class: 'fa fa-pencil btn btn-sm btn-default' %></td>
          <td><%= link_to '', [:admin, channel], method: :delete, data: {confirm: 'Are you sure?'}, class: 'fa fa-trash btn btn-sm btn-danger' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="panel-footer text-center">
  <%= will_paginate @polls, renderer: BootstrapPagination::Rails %>
</div>
