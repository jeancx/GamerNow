<div class="panel-heading">
  <h4>Listando Comentarios de Imagens</h4>
</div>

<div class="panel-body">
  <div class="row">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>User</th>
        <th>Image</th>
        <th>Content</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @image_comments.each do |image_comment| %>
          <tr>
            <td><%= image_comment.user %></td>
            <td><%= image_comment.image %></td>
            <td><%= image_comment.content %></td>
            <td><%= link_to '', [:admin, image_comment], class: 'fa fa-search-plus btn btn-default btn-xs' %></td>
            <td><%= link_to '', edit_admin_image_comment_path(image_comment), class: 'fa fa-pencil btn btn-default btn-xs' %></td>
            <td><%= link_to '', [:admin, image_comment], method: :delete, data: {confirm: 'Are you sure?'}, class: 'fa fa-trash btn btn-xs btn-danger' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="panel-footer">
  <%= will_paginate @image_comments, renderer: BootstrapPagination::Rails %>
</div>