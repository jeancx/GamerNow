<%= form_for([:admin, @user], html: { class: 'form-horizontal user' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'form-control', :disabled => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthday, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :birthday, class: 'form-control', :disabled => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, class: 'form-control', :disabled => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current_sign_in_ip, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :current_sign_in_ip, class: 'form-control', :disabled => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_sign_in_ip, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :last_sign_in_ip, class: 'form-control', :disabled => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :role_ids, "Role", class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :role_ids, Role.all.collect {|x| [x.name, x.id]}, {}, :class => 'form_multiselect', :multiple => true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
