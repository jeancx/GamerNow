<div class="panel-heading">
  <h4>Mostrando User</h4>
</div>

<div class="panel-body">

  <p id="notice"><%= notice %></p>

  <dl class="dl-horizontal">
    <dt><strong>Name:</strong></dt>
    <dd><%= @user.name %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Description:</strong></dt>
    <dd><%= @user.description %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Photo:</strong></dt>
    <dd><img src="<%= @user.gravatar_url %>"></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Birthday:</strong></dt>
    <dd><%= @user.birthday %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Gender:</strong></dt>
    <dd><%= @user.gender %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Email:</strong></dt>
    <dd><%= @user.email %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Current sign in ip:</strong></dt>
    <dd><%= @user.current_sign_in_ip %></dd>
  </dl>

  <dl class="dl-horizontal">
    <dt><strong>Last sign in ip:</strong></dt>
    <dd><%= @user.last_sign_in_ip %></dd>
  </dl>
</div>

</div>

<div class="panel-footer">
  <%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-default' %>
  <%= link_to 'Back', admin_users_path, class: 'btn btn-default' %>
</div>