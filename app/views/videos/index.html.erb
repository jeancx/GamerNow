<%# encoding: utf-8 %>
<header id="header">
  <%= render partial: 'partials/menu' %>
  <%= render partial: 'partials/slideshow' %>
</header>

<div class="main">
  <div class="boxed">

    <div class="page-content">

      <div class="row clearfix">
        <div class="grid_9 alpha posts">

          <div class="title color7"><h4>Vídeos</h4></div>

          <div class="post_day mbf clearfix">

            <% @videos.each do |video| %>

                <div class="grid_6">
                  <div class="post_day_content">
                    <h3><a href="<%= video.link %>"><%= video.title %></a></h3>
                    <a class="hover-shadow" href="<%= video.link %>"><img src="<%= video.image %>" alt="<%= video.title %>"></a>

                    <div class="meta mb"> <%= video.created_at %> / <a href="<%= video.link %>">0 comentários</a></div>
                  </div>
                </div>

            <% end %>

          </div>

          <div class="text-center">

            <%= will_paginate @videos, renderer: BootstrapPagination::Rails %>

          </div>


          <%= render partial: 'related_posts' %>

          <%= render partial: 'partials/adverts' %>

        </div>
        <!-- end grid9 -->

        <div class="grid_3 omega sidebar sidebar_a">

          <%= render partial: 'widgets/most_waited' %>

          <%= render partial: 'widgets/polls' %>

          <%= render partial: 'widgets/last_comments' %>

          <%= render partial: 'widgets/tags' %>

        </div>
        <!-- /grid3 sidebar A -->
      </div>
      <!-- /row -->

    </div>

    <footer id="footer">
      <%= render partial: 'partials/footer_a' %>
      <%= render partial: 'partials/footer_b' %>
    </footer>

  </div>
</div>